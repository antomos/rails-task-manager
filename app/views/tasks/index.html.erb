<h1>List of Tasks</h1>
<ul>
<% @tasks.each do |task| %>
<li>Title:<%= link_to task.title,
  task_path(task),
  data: {turbo_method: :details}
%> - <%= link_to "Delete",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></li>
<% end %>
</ul>
<%= link_to "Add a task",
  new_task_path

%>
